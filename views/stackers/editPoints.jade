extends ../layout

block content
    h1.
        Stacker ID #{stacker._id}
    form(action='/stackers/#{stacker._id}/editPoints',method='post',name='updatestacker',enctype='application/x-www-form-urlencoded')
        p Team: #{stacker.team}
        p Name: #{stacker.name}
        p Current Points: #{stacker.points}
        p Plus Points: 
            input#inputPoints(type='number', min="0", step=100, value=0, name='plus_points')
        p Minus Points: 
            input#subPoints(type='number', min="0", step=100, value=0, name='minus_points')
        p Password: 
            input#inputPassword(type='text', name='password')
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update
